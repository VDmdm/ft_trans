<h1 class="game-room-create-title">Create a game</h1>
<section class="game-room-form-and-game-preview">
    <%= form_for Tournament.new, remote: true do |form| %>
		<div>
            
			<div class="game-room-create-form-el">
                <div>
                    <%= form.label :name %>
                    <%= form.text_field :name, class: "game-room-name-input tournament_field" %>
                </div>
                <div>
                    <%= form.label :description, 'Description', class:"game-room-name-input" %>
                    <%= form.text_field :description, placeholder: "50 characters", minlength: 0, maxlength: 50, size: "100px" %>
                </div>
            </div>
			<div class="game-room-create-form-el">
                <div>
					<%= form.label :start, 'Tournament start' %>
					<!-- <%= form.datetime_field :started, value: (DateTime.now + 2.minute).strftime("%FT%R"), min: (DateTime.now + 2.minute).strftime("%FT%R"), oninput: "change_wartime_and_date(this.value)" %> -->
					<%= form.datetime_field :start, value: (DateTime.now + 2.minute).strftime("%FT%R"), min: (DateTime.now + 2.minute).strftime("%FT%R"), class: "tournament_field" %>
                </div>
				<div>
					<%= form.label :max_players, 'Nunber of players' %>
					<%= form.number_field :max_players, value: 2, min: "2", max: "10", step: "2", class: "tournament_field" %>
				</div>
			</div>
            <div class="game-room-create-form-el">
                <div>
					<%= form.label :cost, 'Cost' %>
					<%= form.number_field :cost, value: 100, min: "100", max: "5000", step: "100", class: "tournament_field" %>
				</div>
				<div>
					<%= form.label :one_round_time, 'Time for round' %>
					<%= form.number_field :one_round_time, value: 1, min: "1", max: "60", step: "20", class: "tournament_field"%>
				</div>
            </div>
		</div>
		<h4 class="game-room-create-title">Ball settings</h4>
        <div class="game-room-create-contour-up">
            <canvas id="game-preview" width="716px" height="346px"></canvas>
            <div class="game-room-create-form">
                <div class="game-room-create-form-el">
                    <%= form.label :bg_color, "Background" %>
                    <%= form.color_field :bg_color, class: "game-room-bg-color-input",
                                                    value: "#000000", oninput: "change_backcolor(this.value)" %>
                </div>
                <div class="game-room-create-form-el">
                    <%= form.label :paddle_color, "Paddle" %>
                    <%= form.color_field :paddle_color, class: "tournament-paddle-input",
                                                    value: "#ffffff", oninput: "change_paddlecolor(this.value)" %>
                </div>
            </div>
        </div>
        <h4 class="game-room-create-title">Ball settings</h4>
        <div class="game-room-create-contour-down">
            <div class="game-room-create-settings-create-btn">
                <div class="game-room-ball-setting-form">
                    <div class="game-room-ball-setting-left">
                        <%= form.label :ball_color, "Color" %>
                        <%= form.color_field :ball_color, class: "color-left",
                                                    value: "#ffffff", oninput: "change_ballcolor(this.value)" %>
                    </div>
                    <div class="game-room-ball-setting-right">
                        <%= form.label :random_mode, "Random?" %>
                        <%= form.check_box :random_mode, class: "checkbox-right", oninput: "change_randommode(this.value)" %>
                    </div>
                    <div class="game-room-ball-setting-left">
                        <%= form.label :ball_size, "Size" %>
                        <output id="input_value_size">1</output>
                        <%= form.range_field :ball_size, value: 1, min: "0.5", max: "2", step: "0.1", oninput: "change_ballsize(this.value)" %>
                    </div>
                    <div class="game-room-ball-setting-right">
                        <%= form.label :ball_down_mode, "size down?" %>
                        <%= form.check_box :ball_down_mode, class: "checkbox-right", oninput: "change_balldownmode(this.value)" %>
                    </div>
                    <div class="game-room-ball-setting-left">
                        <%= form.label :speed_rate, "Speed" %>
                        <output id="input_value_speed">1</output>
                        <%= form.range_field :speed_rate, value: 1, min: "0.5", max: "2", step: "0.1", oninput: "change_ballspeed(this.value)" %>
                    </div>
                    <div class="game-room-ball-setting-right">
                        <%= form.label :ball_speedup_mode, "speed up?" %>
                        <%= form.check_box :ball_speedup_mode, class: "checkbox-right", oninput: "change_speedup(this.value)" %>
                    </div>
                </div>
            </div>
            <div class="game-room-create-submit-btn">
                <%= form.submit "Create", class: "submit-btn" %>
            </div>
       
        </div>
    <% end %>
</section>