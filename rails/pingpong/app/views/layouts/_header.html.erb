<header>
<div class="navbar">
	<ul class="navbar-elements">
		<li class="navbar-element">
			<%= link_to "tournaments", tournaments_path %>
		</li>
		<li class="navbar-element">
			<%= link_to "stats", stats_path %>
		</li>
		<li class="navbar-element logo">
			<%= link_to image_tag("logo.png"), root_path %>
		</li>
		<li class="navbar-element">
			<%= link_to "guilds", guilds_path %>
		</li>
		<li class="navbar-element">
			<%= link_to "games", games_path %>
		</li>
	</ul>
	<div class="dropdown" style="float:right;">
		<% if current_user.image %>
			<button class="dropbtn"><%= image_tag (current_user.image), style: 'height:50px;width:50px;' %></button>
		<%else%>
			<button class="dropbtn"><%= image_tag ("profile_ico_drop.svg")%></button>
		<%end%>
		<div class="dropdown-content">
			<%= link_to (current_user.nickname), profile_path %>
			<%= link_to "friends", friends_path %>
			<%= link_to "logout", destroy_user_session_path, :method => :delete %>
		</div>
	  </div>
</div>
</header>