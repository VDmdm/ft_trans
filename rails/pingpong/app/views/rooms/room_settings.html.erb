<div class="chat-rooms-page-header">
  <h4>Chat</h4>
</div>

<section class="chat-rooms-page-interface">


<%= render 'rooms/sidebar' %>

<div>
<div class="messages-header">
<%= link_to image_tag("arrow.png" , style: "height:40px;width:40px;margin-top:5px" ), room_path(@room) %>
    <%= link_to (image_tag "man.png" , style: "height:45px;" ), rooms_users_path %>
      <h3 style="font-size: 25px;margin-top:10px">
        <%= @room.members.length %>
      </h3>
      <h3 class="header-room-name">
        Editing <%=@room.name%>
      </h3>

      <h3 class="messages-leave">
        <%= link_to "leave" , chat_room_members_leave_path(user_id: current_user.id),  method: :post, remote: true %>
      </h3>
      <% if @room.is_owner?(current_user) %>
    <%end%>
  </div>
  <span class="messages-line"></span>
<div class="room-password" style="width: 500px;">
<%= form_for @room, remote: true do |form| %>
	<%= form.label :name, 'Room name ', class: "new-room-label"%>
	<%= form.text_field :name, placeholder: "max 15", maxlength: 15, class: "new-room-input" %>
	<label for="name3"><br>
	<%= form.label :password, 'Change password', class: "new-room-label"%>
		<%= form.text_field :password, maxlength: 15, id: "password" %>
	<%= form.button "update", class: "password-button" %>
  <% end %>
</div>
</div>

</section>

